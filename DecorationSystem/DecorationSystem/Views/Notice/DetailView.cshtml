@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/layuimini-v2/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="/layuimini-v2/css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <fieldset class="layui-elem-field">
        <legend style="font-size:14px">公告</legend>
        <div  class="layui-field-box">
            <div>
                <h2 style="text-align:center" id="title"></h2>
            </div>   
            <div style="text-align:right">
                <span style="margin-right:20px" id="creatoNaem">发布人：</span>
                <span id="creatoTime">发布时间：</span>
            </div>
            <div id="content"></div>
        </div>
    </fieldset>
    <script src="/layuimini-v2/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form'], function () {
            var form = layui.form,
                layer = layui.layer,
                $ = layui.$;
            var id = window.location.search.substring(4)

            $.ajax({
                url: '/Notice/GetNotice',
                type: 'get',
                data: {
                    id: id
                },
                success: function (res) { //接口响应的内容、
                    console.log(res)
                    if (res.code == 0) {
                        $("#title").text(res.data.title)
                        $("#creatoNaem").text(res.data.name)
                        $("#creatoTime").text(res.data.createTime)
                        $("#content").html(res.data.content)
                    } else {
                        layer.msg(res.msg)
                    }
                  
                }
            });


            console.log(id);
            //发起一个请求，获取当前被编辑人的信息
            //监听提交
            form.on('submit(saveBtn)', function (data) {
                //var index = layer.alert(JSON.stringify(data.field), {
                //    title: '最终的提交信息'
                //}, function () {
                //    // 关闭弹出层
                //    layer.close(index);
                //    var iframeIndex = parent.layer.getFrameIndex(window.name);
                //    parent.layer.close(iframeIndex);
                //});
                //console.log(data);
                //使用Jquery的ajax发异步请求
                $.ajax({
                    url: '/Notice/UpdatNotice',
                    type: 'post',
                    data: {
                        id: id,
                        title: data.field.title,
                        content: data.field.content
                    },
                    success: function (res) { //接口响应的内容

                        if (res.code != 0) {
                            //失败的时候做弹出提示
                            layer.msg(res.msg);
                        } else {
                            //关闭当前弹出层的业务
                            var iframeIndex = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(iframeIndex);
                            parent.reload();
                            parent.layer.msg(res.msg)

                        }
                    }
                });

                //取消表单的submit事件
                return false;
            });

        });

    </script>
</body>
</html>

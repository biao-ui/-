@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/layuimini-v2/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="/layuimini-v2/css/public.css" media="all">
</head>
<body>
    <div class="layuimini-container">
        <div class="layuimini-main">

            <fieldset class="table-search-fieldset">
                <legend>搜索信息</legend>
                <div style="margin: 10px 10px 10px 10px">
                    <form class="layui-form layui-form-pane" action="">
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">客户名称</label>
                                <div class="layui-input-inline">
                                    <input type="text" name="CustomerName" autocomplete="off" class="layui-input">
                                </div>

                                <label class="layui-form-label">客户电话</label>
                                <div class="layui-input-inline">
                                    <input type="text" name="CustomPhone" autocomplete="off" class="layui-input">
                                </div>
                            </div>

                            <div class="layui-inline">
                                <button type="submit" class="layui-btn layui-btn-primary" lay-submit lay-filter="data-search-btn"><i class="layui-icon"></i> 搜 索</button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>

            <script type="text/html" id="toolbarDemo">
                <div class="layui-btn-container">
                    <button class="layui-btn layui-btn-normal layui-btn-sm data-add-btn" lay-event="add"> 添加 </button>
                    <button class="layui-btn layui-btn-sm layui-btn-danger data-delete-btn" lay-event="delete"> 删除 </button>
                </div>
            </script>

            <table class="layui-hide" id="currentTableId" lay-filter="currentTableFilter"></table>

            <script type="text/html" id="currentTableBar">
                <a class="layui-btn layui-btn-normal layui-btn-xs data-count-edit" lay-event="edit">编辑</a>
                <a class="layui-btn layui-btn-normal layui-btn-xs data-count-edit" lay-event="materials">材料</a>
                <a class="layui-btn layui-btn-normal layui-btn-xs data-count-edit" lay-event="print">打印</a>
                <a class="layui-btn layui-btn-xs layui-btn-danger data-count-delete" lay-event="delete">删除</a>
            </script>

        </div>
    </div>
    <script src="/layuimini-v2/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form', 'table'], function () {
            var $ = layui.jquery,
                form = layui.form,
                table = layui.table;

            table.render({
                elem: '#currentTableId',
                url: '/Orders/GetListOrderss',
                toolbar: '#toolbarDemo',
                defaultToolbar: ['filter', 'exports', 'print', {
                    title: '提示',
                    layEvent: 'LAYTABLE_TIPS',
                    icon: 'layui-icon-tips'
                }],
                cols: [[
                    { type: "checkbox", width: 50 },
                    { field: 'id', minWidth: 80, title: 'ID', sort: true, hide: true },
                    { field: 'customerName', minWidth: 80, title: '客户名称' },
                    { field: 'customPhone', minWidth: 80, title: '客户电话' },
                    { field: 'address', minWidth: 80, title: '地址' },
                    { field: 'ares', minWidth: 80, title: '面积' },
                    { field: 'totalPrice', minWidth: 80, title: '总价值' },
                    { field: 'startTime', minWidth: 80, title: '开始时间' },
                    { field: 'endTime', title: '结束时间', minWidth: 80 },
                    { field: 'designer', title: '设计师', minWidth: 80 },
                    { field: 'remark', title: '备注', minWidth: 80 },
                    { field: 'createTime', title: '创建时间', minWidth: 150 },
                    { title: '操作', minWidth: 250, toolbar: '#currentTableBar', align: "center" }
                ]],
                limits: [10, 20, 30],
                limit: 10,
                page: true,
                skin: 'line'
            });

            // 监听搜索操作
            form.on('submit(data-search-btn)', function (data) {

                //执行搜索重载
                table.reload('currentTableId', {
                    page: {
                        curr: 1
                    }
                    , where: {
                        name: data.field.name,
                    }
                }, 'data');

                return false;
            });

            // 监听搜索操作
            form.on('submit(data-search-btn)', function (data) {

                //执行搜索重载
                table.reload('currentTableId', {
                    page: {
                        curr: 1
                    }
                    , where: {
                        name: data.field.name,
                    }
                }, 'data');

                return false;
            });

            /**
             * toolbar监听事件
             */
            table.on('toolbar(currentTableFilter)', function (obj) {
                if (obj.event === 'add') {  // 监听添加操作
                    var index = layer.open({
                        title: '添加角色',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['80%', '80%'],
                        content: '/Orders/CreateOrdersView',
                        end: function () {
                            table.reload('currentTableId', {
                                page: {
                                    curr: 1
                                }
                                , where: {
                                }
                            }, 'data');
                        }
                    });
                } else if (obj.event === 'delete') {  // 监听删除操作
                    var checkStatus = table.checkStatus('currentTableId')
                        , data = checkStatus.data;
                    //layer.alert(JSON.stringify(data));
                    console.log(data)

                    var ids = []
                    for (var i = 0; i < data.length; i++) {
                        ids.push(data[i].id);
                    };
                    $.ajax({
                        url: '/Orders/BatchDeleteOrders',
                        type: 'post',
                        data: {
                            ids: ids
                        },
                        success: function (res) {
                            if (res.code == 0) {
                                table.reload('currentTableId', {
                                    page: {
                                        curr: 1
                                    }
                                    , where: {

                                    }
                                }, 'data');
                            } else {
                                layer.msg(res.msg)
                            }
                        }
                    })
                }
            });

            //监听表格复选框选择
            table.on('checkbox(currentTableFilter)', function (obj) {
                console.log(obj)
            });

            table.on('tool(currentTableFilter)', function (obj) {
                var data = obj.data;
                if (obj.event === 'edit') {
                    var index = layer.open({
                        title: '编辑材料',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['80%', '80%'],
                        content: '/Orders/UpOrdersView?id=' + data.id,

                        end: function () {
                            table.reload('currentTableId', {
                                page: {
                                    curr: 1
                                }
                                , where: {
                                }
                            }, 'data');
                        }
                    });
                    // $(window).on("resize", function () {
                    //     layer.full(index);
                    // });
                    return false;
                } else if (obj.event === 'delete') {
                    layer.confirm('真的删除行么', function (index) {

                        $.ajax({
                            url: '/Orders/DeleteOrders',
                            type: 'post',
                            data: {
                                id: data.id
                            },
                            success: function (res) {
                                if (res.code == 0) {
                                    obj.del();
                                    layer.close(index);
                                } else {
                                    layer.msg(res.msg)
                                }
                            }
                        })
                    });
                } else if (obj.event === 'materials') {  // 监听材料操作 
                    console.log(data.id)
                    var index = layer.open({
                        title: '查看材料',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['80%', '80%'],
                        content: '/Orders/OrdersMaterialListView?id=' + data.id

                    });
                    //把订单id存进sessionstorage中
                    sessionStorage.setItem('ordersId', data.id)
                    //return false;
                } else if (obj.event === 'print') {
                    //console.log("传过来的"+data.id);
                    window.open('/Orders/PrintView?id=' + data.id)

                    return false;
                }
            });

        });
    </script>

</body>
</html>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/layuimini-v2/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="/layuimini-v2/css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <div style="display:flex;justify-content:center;padding:30px;">
        <div id="ID-transfer-demo-showSearch"></div>
    </div>

    <script src="/layuimini-v2/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form'], function () {
            var form = layui.form,
                layer = layui.layer,
                $ = layui.$;

            var id = window.location.search.substring(4)
            var transfer = layui.transfer;
            // 数据
            $.ajax({
                url: '/RoleInfo/GetMenulnfoOptionList',
                type: 'get',
                data: {
                    roleId: id
                },
                success: function (res) {
                    // 渲染
                    console.log(res)
                    if (res.code == 0) {
                        transfer.render({
                            elem: '#ID-transfer-demo-showSearch',
                            data: res.data.menuInfo,
                            title: ['未绑定', '已绑定'],
                            showSearch: true,
                            value: res.data.menuIds,
                            onchange: function (data, index) {
                                console.log(data); // 得到当前被穿梭的数据
                                console.log(index); // 如果数据来自左边，index 为 0，否则为
                                var menuIds = [];
                                for (var i = 0; i < data.length; i++) {
                                    menuIds.push(data[i].value)
                                }
                         
                                $.ajax({
                                    url: '/RoleInfo/BinMenulnfo',
                                    type: 'post',
                                    data: {
                                        index: index,
                                        roleId: id,
                                        menuIds: menuIds
                                    },
                                    success: function (res) {
                                        // 渲染
                                        if (res.code == 0) {
                                            layer.msg(res.msg)
                                        } else {
                                            layer.msg(res.msg)
                                        }

                                    }
                                });

                            }
                        });
                    } else {
                        layer.msg(res.msg)
                    }

                }
            });




        });
    </script>
</body>
</html>

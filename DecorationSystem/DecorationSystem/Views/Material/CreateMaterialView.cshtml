@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/layuimini-v2/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="/layuimini-v2/css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="layui-form layuimini-form">
        <div class="layui-form-item">
            <label class="layui-form-label required">材料名</label>
            <div class="layui-input-block">
                <input type="text" name="name" lay-verify="required" lay-reqtext="姓名不能为空" placeholder="请输入用户名" value="" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">单位</label>
            <div class="layui-input-block">
                <input type="text" name="unit" lay-verify="required" lay-reqtext="单位不能为空" placeholder="请输入单位" value="" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">主要价格</label>
            <div class="layui-input-block">
                <input type="number" name="priceMain" lay-verify="required" lay-reqtext="主要价格不能为空" placeholder="请输入主要价格" value="" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">人工价格</label>
            <div class="layui-input-block">
                <input type="number" name="priceArtificial" lay-verify="required" lay-reqtext="人工价格不能为空" placeholder="请输入人工价格" value="" class="layui-input">
            </div>
        </div>

     

        <div class="layui-form-item">
            <label class="layui-form-label ">备注</label>
            <div class="layui-input-block">
                <input type="text" name="remark" placeholder="请输入备注" value="" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认保存</button>
            </div>
        </div>
    </div>
    <script src="/layuimini-v2/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form'], function () {
            var form = layui.form,
                layer = layui.layer,
                $ = layui.$;

            //监听提交
            form.on('submit(saveBtn)', function (data) {
                data = data.field;

                $.ajax({
                    url: '/Material/CreateMaterial',
                    type: 'post',
                    data: {
                        name: data.name,
                        remark: data.remark,
                        unit: data.unit,
                        priceMain: data.priceMain,
                        priceArtificial: data.priceArtificial,
                        price: data.price
                    },
                    success: function (res) {
                        if (res.code == 0) {
                            var iframeIndex = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(iframeIndex);
                        } else {
                            layer.msg(res.msg)
                        }

                    },

                })
            });

            return false;
        });
    </script>
</body>
</html>